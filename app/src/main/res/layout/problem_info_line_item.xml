<!-- Following layout is used in the "About CityApp" view accessed through the overflow menu and
     hosted by the UserInformationActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StyleInfoTextView"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/enumeration"
        android:layout_width="@dimen/enumeration_column_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/problem_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>